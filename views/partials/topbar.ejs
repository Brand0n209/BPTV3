<div class="topbar flex items-center justify-between bg-blue-100 border-b border-blue-200 px-4 py-2 shadow-sm">
  <div class="flex items-center gap-3">
    <button id="nav-toggle" class="nav-toggle md:hidden" aria-label="Open navigation">&#9776;</button>
    <span class="app-title font-bold text-blue-700 text-lg tracking-wide">Bright Prodigy</span>
    <% if (typeof currentTab !== 'undefined' && currentTab) { %>
      <span class="ml-4 px-3 py-1 rounded-full bg-blue-200 text-blue-800 text-xs font-semibold">
        <%= currentTab %>
      </span>
    <% } %>
  </div>
  <% if (user) { %>
    <div class="flex items-center gap-2">
      <div class="w-8 h-8 rounded-full bg-blue-200 flex items-center justify-center text-blue-700 font-bold text-base">
        <%= user.firstName ? user.firstName[0] : (user.email ? user.email[0] : 'U') %>
      </div>
      <div class="flex flex-col items-start">
        <span class="text-sm font-semibold text-blue-800"><%= user.firstName ? user.firstName : (user.email || 'User') %></span>
        <span class="text-xs text-blue-500"><%= user.role ? user.role.charAt(0).toUpperCase() + user.role.slice(1) : '' %></span>
      </div>
    </div>
  <% } %>
</div>
<script src="/js/nav.js"></script>
