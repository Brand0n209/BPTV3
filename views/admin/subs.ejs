<%- include('../partials/header', { title: 'Subs - Admin - Bright Prodigy' }) %>
<div class="layout-grid min-h-screen h-screen">
  <%- include('../partials/sidebar', { user: typeof user !== 'undefined' ? user : null, activeTab: 'subs' }) %>
  <div class="main-content flex-1 flex flex-col min-h-screen h-screen" style="min-width:0;">
    <%- include('../partials/topbar', { user: typeof user !== 'undefined' ? user : null, currentTab: 'Subs' }) %>
    <div class="tab-content w-full max-w-full px-4 flex-1 flex flex-col overflow-hidden">
      <% const tabList = ['Add Sub', 'All Subs', 'Not Contacted Yet', 'Contacted', 'Waiting Cust Approval', 'Confirmed & Inputted', 'Not Interested after sub', 'Bad Lead', 'Contacted again, no reply', 'Fired']; %>
      <nav class="flex justify-center w-full space-x-2 border-b border-blue-200 mb-6 overflow-x-auto pt-6 items-center" aria-label="Sub stages">
        <% tabList.forEach(tab => { %>
          <a
            href="/admin/subs?<%= 'stage=' + encodeURIComponent(tab) %>"
            class="px-3 py-1.5 text-xs font-medium rounded-t-md transition
              <%= currentStage === tab
                ? 'bg-white border-l border-t border-r border-blue-500 text-blue-800 shadow ring-2 ring-blue-500 font-bold'
                : 'bg-blue-50 text-blue-600 hover:bg-blue-100' %>"
            aria-current="<%= currentStage === tab ? 'page' : undefined %>"
          >
            <%= tab %>
          </a>
        <% }) %>
      </nav>
      <% if (currentStage === 'Add Sub') { %>
        <!--
          Add Sub Module
          Modern form for adding a sub, grouped by Niche, using config options for dropdowns/multi-selects.
          Fields and validation match the webflow form and external sheet headers.
        -->
        <div class="w-full max-w-5xl mx-auto">
          <div class="mb-6">
            <h2 class="text-2xl font-bold text-blue-900">Add Sub</h2>
          </div>
          <form id="addSubForm" autocomplete="off" class="relative bg-white p-6 rounded-lg shadow" style="position:relative;">
            <!-- Row 1 -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
              <div>
                <label class="block text-sm font-medium text-gray-700">First Name <span class="text-red-500">*</span></label>
                <input type="text" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="First Name">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Last Name <span class="text-red-500">*</span></label>
                <input type="text" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Last Name">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Phone Number <span class="text-red-500">*</span></label>
                <input type="tel" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Phone Number">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Email">
              </div>
            </div>
            <!-- Row 2 -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
              <div>
                <label class="block text-sm font-medium text-gray-700">Referral <span class="text-red-500">*</span></label>
                <select class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Referral">
                  <% subsFormOptions.REFERRAL_SOURCES.forEach(function(opt) { %>
                    <option value="<%= opt %>"><%= opt %></option>
                  <% }) %>
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Address <span class="text-red-500">*</span></label>
                <input type="text" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Address">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">City <span class="text-red-500">*</span></label>
                <input type="text" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="City">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Home Stories <span class="text-red-500">*</span></label>
                <select class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Home Stories">
                  <% subsFormOptions.HOME_STORIES.forEach(function(opt) { %>
                    <option value="<%= opt %>"><%= opt %></option>
                  <% }) %>
                </select>
              </div>
            </div>
            <!-- Row 3: Lighting Block -->
            <div class="grid grid-cols-1 md:grid-cols-12 gap-4 mb-4">
              <div class="md:col-span-6 flex gap-4">
                <div class="flex-1 min-w-0">
                  <label class="block text-sm font-medium text-gray-700">Lighting Options</label>
                  <% subsFormOptions.LIGHTING_OPTIONS_TEMPORARY.concat(subsFormOptions.LIGHTING_OPTIONS_PERMANENT).forEach(function(opt) { %>
                    <div class="flex items-center mt-1">
                      <input class="mr-2 rounded border-gray-300 text-blue-600 focus:ring-blue-500" type="checkbox" name="Lighting Options" value="<%= opt %>" id="addsub-LightingOptions-<%= opt.replace(/\s+/g, '') %>">
                      <label for="addsub-LightingOptions-<%= opt.replace(/\s+/g, '') %>" class="text-sm text-gray-700"><%= opt %></label>
                    </div>
                  <% }) %>
                </div>
                <div class="flex-1 min-w-0">
                  <label class="block text-sm font-medium text-gray-700">Lighting Sides</label>
                  <% subsFormOptions.LIGHTING_SIDES.forEach(function(opt) { %>
                    <div class="flex items-center mt-1">
                      <input class="mr-2 rounded border-gray-300 text-blue-600 focus:ring-blue-500" type="checkbox" name="Lighting Sides" value="<%= opt %>" id="addsub-LightingSides-<%= opt.replace(/\s+/g, '') %>">
                      <label for="addsub-LightingSides-<%= opt.replace(/\s+/g, '') %>" class="text-sm text-gray-700"><%= opt %></label>
                    </div>
                  <% }) %>
                </div>
              </div>
              <div class="md:col-span-3">
                <label class="block text-sm font-medium text-gray-700">Pref Service Date (LIGHTING)</label>
                <input type="date" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Pref Service Date (LIGHTING)">
                <label class="block text-sm font-medium text-gray-700 mt-2">Measure</label>
                <select class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Measure">
                  <% subsFormOptions.MEASURE_OPTIONS.forEach(function(opt) { %>
                    <option value="<%= opt %>"><%= opt %></option>
                  <% }) %>
                </select>
              </div>
              <div class="md:col-span-3 flex flex-col h-full">
                <label class="block text-sm font-medium text-gray-700">Lighting notes</label>
                <textarea class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base flex-1" name="Lighting notes" rows="4"></textarea>
              </div>
            </div>
            <!-- Row 4: Solar Block -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
              <div>
                <label class="block text-sm font-medium text-gray-700">Solar Selected Services</label>
                <% subsFormOptions.SOLAR_SERVICES.forEach(function(opt) { %>
                  <div class="flex items-center mt-1">
                    <input class="mr-2 rounded border-gray-300 text-blue-600 focus:ring-blue-500" type="checkbox" name="Solar Selected Services" value="<%= opt %>" id="addsub-SolarSelectedServices-<%= opt.replace(/\s+/g, '') %>">
                    <label for="addsub-SolarSelectedServices-<%= opt.replace(/\s+/g, '') %>" class="text-sm text-gray-700"><%= opt %></label>
                  </div>
                <% }) %>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Pref Service Date (SOLAR)</label>
                <input type="date" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Pref Service Date (SOLAR)">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Solar Panels</label>
                <input type="number" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Solar Panels">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Solar notes</label>
                <textarea class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Solar notes" rows="2"></textarea>
              </div>
            </div>
            <!-- Row 5: Gutter Block -->
            <div class="grid grid-cols-1 md:grid-cols-8 gap-4 mb-4">
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700">Gutter Selected Service</label>
                <% subsFormOptions.GUTTER_SERVICES.forEach(function(opt) { %>
                  <div class="flex items-center mt-1">
                    <input class="mr-2 rounded border-gray-300 text-blue-600 focus:ring-blue-500" type="checkbox" name="Gutter Selected Service" value="<%= opt %>" id="addsub-GutterSelectedService-<%= opt.replace(/\s+/g, '') %>">
                    <label for="addsub-GutterSelectedService-<%= opt.replace(/\s+/g, '') %>" class="text-sm text-gray-700"><%= opt %></label>
                  </div>
                <% }) %>
              </div>
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700">Pref Service Date (GUTTER)</label>
                <input type="date" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Pref Service Date (GUTTER)">
              </div>
              <div class="md:col-span-4">
                <label class="block text-sm font-medium text-gray-700">Gutter notes</label>
                <textarea class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Gutter notes" rows="2"></textarea>
              </div>
            </div>
            <div class="flex justify-end mt-6">
              <button type="submit" class="px-6 py-3 bg-blue-600 text-white text-lg font-semibold rounded shadow hover:bg-blue-700 transition">Submit</button>
            </div>
            <div id="addSubLoadingOverlay" class="hidden absolute top-0 left-0 w-full h-full bg-gray-100 bg-opacity-70 z-10 flex items-center justify-center">
              <div class="text-center">
                <svg class="animate-spin h-10 w-10 text-blue-600 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v8z"></path>
                </svg>
                <div class="mt-2 text-gray-700">Submitting...</div>
              </div>
            </div>
            <div id="addSubSuccessMsg" class="hidden absolute top-5 left-1/2 transform -translate-x-1/2 bg-green-100 text-green-800 border border-green-300 rounded-lg px-8 py-3 z-20 font-bold text-lg shadow">
              Submission successful!
            </div>
          </form>
        </div>
        <script src="/js/addSub.js"></script>
      <% } else { %>
        <div class="content-area flex-1 flex flex-col overflow-hidden">
          <div class="table-container overflow-x-auto overflow-y-auto w-full max-w-full max-h-full border rounded bg-gray-50 p-4">
            <% 
              let displayRows = rows;
              const hasRows = displayRows && displayRows.length > 0; 
            %>
            <table class="table-auto divide-y divide-gray-200 min-w-full">
              <thead class="bg-blue-100 sticky top-0 z-10">
                <tr>
                  <% if (hasRows) { %>
                    <% Object.keys(displayRows[0]).forEach(function(col) { %>
                      <th class="px-4 py-2 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider bg-blue-100 whitespace-nowrap">
                        <%= col %>
                      </th>
                    <% }) %>
                  <% } %>
                </tr>
              </thead>
              <tbody>
                <% if (hasRows) { %>
                  <% displayRows.forEach(function(row, idx) { %>
                    <tr class="sub-row <%= idx % 2 === 0 ? 'bg-white' : 'bg-blue-100' %> cursor-pointer hover:bg-blue-200 transition"
                        data-row-index="<%= idx %>">
                      <% Object.values(row).forEach(function(val) { %>
                        <td class="px-4 py-2 text-sm text-gray-900 whitespace-nowrap"><%= val %></td>
                      <% }) %>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="100" class="text-center py-8 text-gray-400">No submissions found.</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      <% } %>
    </div>
    <%- include('../partials/footer') %>
  </div>
</div>


<!-- Expose subsFormOptions to JS ---->
<script>
  window.SUBS_FORM_OPTIONS = <%- JSON.stringify(subsFormOptions) %>;
</script>
<script src="/js/subs.js"></script>
