<%- include('../partials/header', { title: 'Subs - Admin - Bright Prodigy' }) %>
<div class="layout-grid min-h-screen h-screen">
  <%- include('../partials/sidebar', { user: typeof user !== 'undefined' ? user : null, activeTab: 'subs' }) %>
  <div class="main-content flex-1 flex flex-col min-h-screen h-screen" style="min-width:0;">
    <%- include('../partials/topbar', { user: typeof user !== 'undefined' ? user : null, currentTab: 'Subs' }) %>
    <div class="tab-content w-full max-w-full px-4 flex-1 flex flex-col overflow-hidden">
      <% const tabList = ['Add Sub', 'All Subs', 'Not Contacted Yet', 'Contacted', 'Waiting Cust Approval', 'Confirmed & Inputted', 'Not Interested after sub', 'Bad Lead', 'Contacted again, no reply', 'Fired']; %>
      <nav class="flex justify-center w-full space-x-2 border-b border-blue-200 mb-6 overflow-x-auto pt-6 items-center" aria-label="Sub stages">
        <% tabList.forEach(tab => { %>
          <a
            href="/admin/subs?<%= 'stage=' + encodeURIComponent(tab) %>"
            class="px-3 py-1.5 text-xs font-medium rounded-t-md transition
              <%= currentStage === tab
                ? 'bg-white border-l border-t border-r border-blue-500 text-blue-800 shadow ring-2 ring-blue-500 font-bold'
                : 'bg-blue-50 text-blue-600 hover:bg-blue-100' %>"
            aria-current="<%= currentStage === tab ? 'page' : undefined %>"
          >
            <%= tab %>
          </a>
        <% }) %>
      </nav>
      <% if (currentStage === 'Add Sub') { %>
        <div class="w-full max-w-4xl mx-auto">
          <div class="mb-6">
            <h2 class="text-2xl font-bold text-blue-900">Add Sub</h2>
          </div>
          <form id="addSubForm" autocomplete="off" class="relative bg-white p-6 rounded-lg shadow w-full space-y-8">
            <!-- Personal Info Section -->
            <div class="border border-blue-200 rounded-lg p-6 bg-blue-50">
              <h3 class="text-lg font-semibold text-blue-800 mb-4">Personal Information</h3>
              <div class="grid grid-cols-4 gap-4">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-gray-700">First Name <span class="text-red-500">*</span></label>
                  <input id="firstName" type="text" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="First Name" aria-describedby="firstName-error">
                  <p id="firstName-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                </div>
                <div>
                  <label for="lastName" class="block text-sm font-medium text-gray-700">Last Name <span class="text-red-500">*</span></label>
                  <input id="lastName" type="text" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Last Name" aria-describedby="lastName-error">
                  <p id="lastName-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                </div>
                <div>
                  <label for="phoneNumber" class="block text-sm font-medium text-gray-700">Phone Number <span class="text-red-500">*</span></label>
                  <input id="phoneNumber" type="tel" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Phone Number" aria-describedby="phoneNumber-error">
                  <p id="phoneNumber-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                  <input id="email" type="email" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Email" aria-describedby="email-error">
                  <p id="email-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                </div>
              </div>
            </div>
            <!-- Address/Referral Section -->
            <div class="border border-blue-200 rounded-lg p-6 bg-blue-50">
              <h3 class="text-lg font-semibold text-blue-800 mb-4">Address & Referral</h3>
              <div class="grid grid-cols-4 gap-4">
                <div class="md:col-span-2">
                  <label for="address" class="block text-sm font-medium text-gray-700">Address <span class="text-red-500">*</span></label>
                  <input id="address" type="text" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Address" aria-describedby="address-error">
                  <p id="address-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                </div>
                <div>
                  <label for="city" class="block text-sm font-medium text-gray-700">City <span class="text-red-500">*</span></label>
                  <input id="city" type="text" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="City" aria-describedby="city-error">
                  <p id="city-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                </div>
                <div>
                  <label for="homeStories" class="block text-sm font-medium text-gray-700">Home Stories <span class="text-red-500">*</span></label>
                  <select id="homeStories" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Home Stories" aria-describedby="homeStories-error">
                    <% subsFormOptions.HOME_STORIES.forEach(function(opt) { %>
                      <option value="<%= opt %>"><%= opt %></option>
                    <% }) %>
                  </select>
                  <p id="homeStories-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                </div>
              </div>
              <div class="mt-4">
                <label for="referral" class="block text-sm font-medium text-gray-700">Referral <span class="text-red-500">*</span></label>
                <select id="referral" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Referral" aria-describedby="referral-error">
                  <option value="">Select a referral source</option>
                  <% subsFormOptions.REFERRAL_SOURCES.forEach(function(opt) { %>
                    <option value="<%= opt %>"><%= opt %></option>
                  <% }) %>
                </select>
                <p id="referral-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
              </div>
            </div>
            <!-- Lighting Section -->
            <div class="border border-blue-200 rounded-lg p-6 bg-blue-50">
              <h3 class="text-lg font-semibold text-blue-800 mb-4">Lighting</h3>
              <div class="grid grid-cols-1 md:grid-cols-6 gap-4">
                <div class="md:col-span-2">
                  <fieldset class="mb-4">
                    <legend class="block text-sm font-medium text-gray-700 mb-1">Lighting Options</legend>
                    <div class="flex flex-wrap gap-4">
                      <% subsFormOptions.LIGHTING_OPTIONS.forEach(function(opt, idx) { 
                        var id = `addsub-LightingOptions-${opt.replace(/\s+/g, '')}`;
                      %>
                        <div class="flex items-center">
                          <input 
                            class="mr-2 rounded border-gray-300 text-blue-600 focus:ring-blue-500"
                            type="checkbox"
                            name="Lighting Options"
                            value="<%= opt %>"
                            id="<%= id %>"
                            aria-describedby="<%= id %>-error"
                          >
                          <label for="<%= id %>" class="text-sm text-gray-700"><%= opt %></label>
                        </div>
                      <% }) %>
                    </div>
                    <p id="addsub-LightingOptions-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                  </fieldset>
                </div>
                <div class="md:col-span-2">
                  <fieldset class="mb-4">
                    <legend class="block text-sm font-medium text-gray-700 mb-1">Lighting Sides</legend>
                    <div class="flex flex-wrap gap-4">
                      <% subsFormOptions.LIGHTING_SIDES.forEach(function(opt, idx) { 
                        var id = `addsub-LightingSides-${opt.replace(/\s+/g, '')}`;
                      %>
                        <div class="flex items-center">
                          <input 
                            class="mr-2 rounded border-gray-300 text-blue-600 focus:ring-blue-500"
                            type="checkbox"
                            name="Lighting Sides"
                            value="<%= opt %>"
                            id="<%= id %>"
                            aria-describedby="<%= id %>-error"
                          >
                          <label for="<%= id %>" class="text-sm text-gray-700"><%= opt %></label>
                        </div>
                      <% }) %>
                    </div>
                    <p id="addsub-LightingSides-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                  </fieldset>
                </div>
                <div class="md:col-span-2 grid grid-rows-3 gap-2 h-full">
                  <div class="row-span-1">
                    <label for="prefServiceDateLighting" class="block text-sm font-medium text-gray-700">Pref Service Date (LIGHTING)</label>
                    <input id="prefServiceDateLighting" type="date" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Pref Service Date (LIGHTING)" aria-describedby="prefServiceDateLighting-error">
                    <p id="prefServiceDateLighting-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                  </div>
                  <div class="row-span-1">
                    <label for="measure" class="block text-sm font-medium text-gray-700">Measure</label>
                    <select id="measure" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Measure" aria-describedby="measure-error">
                      <% subsFormOptions.MEASURE_OPTIONS.forEach(function(opt) { %>
                        <option value="<%= opt %>"><%= opt %></option>
                      <% }) %>
                    </select>
                    <p id="measure-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                  </div>
                  <div class="row-span-1 row-start-3 row-end-4 h-full">
                    <label for="lightingNotes" class="block text-sm font-medium text-gray-700">Lighting notes</label>
                    <textarea id="lightingNotes" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base h-24" name="Lighting notes" rows="4" aria-describedby="lightingNotes-error"></textarea>
                    <p id="lightingNotes-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                  </div>
                </div>
              </div>
            </div>
            <!-- Solar Section -->
            <div class="border border-blue-200 rounded-lg p-6 bg-blue-50">
              <h3 class="text-lg font-semibold text-blue-800 mb-4">Solar</h3>
              <div class="grid grid-cols-4 gap-4">
                <div>
                  <fieldset class="mb-4">
                    <legend class="block text-sm font-medium text-gray-700 mb-1">Solar Selected Services</legend>
                    <div class="flex flex-wrap gap-4">
                      <% subsFormOptions.SOLAR_SERVICES.forEach(function(opt, idx) { 
                        var id = `addsub-SolarSelectedServices-${opt.replace(/\s+/g, '')}`;
                      %>
                        <div class="flex items-center">
                          <input 
                            class="mr-2 rounded border-gray-300 text-blue-600 focus:ring-blue-500"
                            type="checkbox"
                            name="Solar Selected Services"
                            value="<%= opt %>"
                            id="<%= id %>"
                            aria-describedby="<%= id %>-error"
                          >
                          <label for="<%= id %>" class="text-sm text-gray-700"><%= opt %></label>
                        </div>
                      <% }) %>
                    </div>
                    <p id="addsub-SolarSelectedServices-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                  </fieldset>
                </div>
                <div>
                  <label for="prefServiceDateSolar" class="block text-sm font-medium text-gray-700">Pref Service Date (SOLAR)</label>
                  <input id="prefServiceDateSolar" type="date" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Pref Service Date (SOLAR)" aria-describedby="prefServiceDateSolar-error">
                  <p id="prefServiceDateSolar-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                </div>
                <div>
                  <label for="solarPanels" class="block text-sm font-medium text-gray-700">Solar Panels</label>
                  <input id="solarPanels" type="number" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Solar Panels" aria-describedby="solarPanels-error">
                  <p id="solarPanels-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                </div>
                <div>
                  <label for="solarNotes" class="block text-sm font-medium text-gray-700">Solar notes</label>
                  <textarea id="solarNotes" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Solar notes" rows="2" aria-describedby="solarNotes-error"></textarea>
                  <p id="solarNotes-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                </div>
              </div>
            </div>
            <!-- Gutter Section -->
            <div class="border border-blue-200 rounded-lg p-6 bg-blue-50">
              <h3 class="text-lg font-semibold text-blue-800 mb-4">Gutter</h3>
              <div class="grid grid-cols-1 md:grid-cols-8 gap-4">
                <div class="md:col-span-2">
                  <fieldset class="mb-4">
                    <legend class="block text-sm font-medium text-gray-700 mb-1">Gutter Selected Service</legend>
                    <div class="flex flex-wrap gap-4">
                      <% subsFormOptions.GUTTER_SERVICES.forEach(function(opt, idx) { 
                        var id = `addsub-GutterSelectedService-${opt.replace(/\s+/g, '')}`;
                      %>
                        <div class="flex items-center">
                          <input 
                            class="mr-2 rounded border-gray-300 text-blue-600 focus:ring-blue-500"
                            type="checkbox"
                            name="Gutter Selected Service"
                            value="<%= opt %>"
                            id="<%= id %>"
                            aria-describedby="<%= id %>-error"
                          >
                          <label for="<%= id %>" class="text-sm text-gray-700"><%= opt %></label>
                        </div>
                      <% }) %>
                    </div>
                    <p id="addsub-GutterSelectedService-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                  </fieldset>
                </div>
                <div class="md:col-span-2">
                  <label for="prefServiceDateGutter" class="block text-sm font-medium text-gray-700">Pref Service Date (GUTTER)</label>
                  <input id="prefServiceDateGutter" type="date" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Pref Service Date (GUTTER)" aria-describedby="prefServiceDateGutter-error">
                  <p id="prefServiceDateGutter-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                </div>
                <div class="md:col-span-4">
                  <label for="gutterNotes" class="block text-sm font-medium text-gray-700">Gutter notes</label>
                  <textarea id="gutterNotes" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base" name="Gutter notes" rows="2" aria-describedby="gutterNotes-error"></textarea>
                  <p id="gutterNotes-error" class="text-red-600 text-sm mt-1 hidden" role="alert"></p>
                </div>
              </div>
            </div>
            <div class="flex justify-end mt-6">
              <button type="submit" class="px-6 py-3 bg-blue-600 text-white text-lg font-semibold rounded shadow hover:bg-blue-700 transition">Submit</button>
            </div>
            <div id="addSubLoadingOverlay" class="hidden absolute top-0 left-0 w-full h-full bg-gray-100 bg-opacity-70 z-10 flex items-center justify-center">
              <div class="text-center">
                <svg class="animate-spin h-10 w-10 text-blue-600 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v8z"></path>
                </svg>
                <div class="mt-2 text-gray-700">Submitting...</div>
              </div>
            </div>
            <div id="addSubSuccessMsg" class="hidden absolute top-5 left-1/2 transform -translate-x-1/2 bg-green-100 text-green-800 border border-green-300 rounded-lg px-8 py-3 z-20 font-bold text-lg shadow">
              Submission successful!
            </div>
          </form>
        </div>
        <script src="/js/addSub.js"></script>
      <% } else { %>
        <div class="content-area flex-1 flex flex-col overflow-hidden">
          <div class="table-container overflow-x-auto overflow-y-auto w-full max-w-full max-h-full border rounded bg-gray-50 p-4">
            <% 
              let displayRows = rows;
              const hasRows = displayRows && displayRows.length > 0; 
            %>
            <table class="table-auto divide-y divide-gray-200 min-w-full">
              <thead class="bg-blue-100 sticky top-0 z-10">
                <tr>
                  <% if (hasRows) { %>
                    <% Object.keys(displayRows[0]).forEach(function(col) { %>
                      <th class="px-4 py-2 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider bg-blue-100 whitespace-nowrap">
                        <%= col %>
                      </th>
                    <% }) %>
                  <% } %>
                </tr>
              </thead>
              <tbody>
                <% if (hasRows) { %>
                  <% displayRows.forEach(function(row, idx) { %>
                    <tr class="sub-row <%= idx % 2 === 0 ? 'bg-white' : 'bg-blue-100' %> cursor-pointer hover:bg-blue-200 transition"
                        data-row-index="<%= idx %>">
                      <% Object.values(row).forEach(function(val) { %>
                        <td class="px-4 py-2 text-sm text-gray-900 whitespace-nowrap"><%= val %></td>
                      <% }) %>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="100" class="text-center py-8 text-gray-400">No submissions found.</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      <% } %>
    </div>
    <%- include('../partials/footer') %>
  </div>
</div>
<script>
  window.SUBS_FORM_OPTIONS = <%- JSON.stringify(subsFormOptions) %>;
</script>
<script src="/js/subs.js"></script>
