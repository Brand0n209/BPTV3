<% /* eslint-disable */ %>
<%- include('../partials/header', { title: 'Admin â€“ Subs' }) %>
<%- include('../partials/topbar', { user, currentTab: filterType }) %>
<div class="flex flex-row min-h-screen">
  <%- include('../partials/sidebar', { user, activeTab: 'subs' }) %>
  <main class="flex-1 p-6">
    <!-- New Sub-Tabs UI (Filters) -->
    <div class="flex flex-wrap gap-2 mb-4">
          <% const stagesList = stages || [
            "Not Contacted Yet", "Contacted", "Waiting Cust Approval", 
            "Confirmed & Inputted", "Not Interested after sub", 
            "Bad Lead", "Contacted again, no reply", "Fired"
          ]; %>
          <% stagesList.forEach(stage => { %>
            <a href="/admin/subs/<%= encodeURIComponent(stage) %>"
               class="px-4 py-2 rounded-full border border-blue-400 text-blue-600 hover:bg-blue-100 
                      transition duration-200 flex items-center gap-2 <% if (currentStage === stage) { %>bg-blue-200 font-semibold<% } %>">
              <% 
                // Icon logic for each stage
                let icon = '';
                if (stage === "Not Contacted Yet") {
                  icon = `<svg class="w-[1em] h-[1em] align-middle" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6l4 2" /></svg>`;
                } else if (stage === "Contacted") {
                  icon = `<svg class="w-[1em] h-[1em] align-middle" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H5a2 2 0 01-2-2V5zm0 10a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H5a2 2 0 01-2-2v-2zm10-10a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zm0 10a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" /></svg>`;
                } else if (stage === "Waiting Cust Approval") {
                  icon = `<svg class="w-[1em] h-[1em] align-middle" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7V4a4 4 0 018 0v3m0 10v3a4 4 0 01-8 0v-3m8-10H8m8 10H8" /></svg>`;
                } else if (stage === "Confirmed & Inputted") {
                  icon = `<svg class="w-[1em] h-[1em] align-middle" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>`;
                } else if (stage === "Not Interested after sub") {
                  icon = `<svg class="w-[1em] h-[1em] align-middle" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>`;
                } else if (stage === "Bad Lead") {
                  icon = `<svg class="w-[1em] h-[1em] align-middle" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`;
                } else if (stage === "Contacted again, no reply") {
                  icon = `<svg class="w-[1em] h-[1em] align-middle" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M4 4v6h6M20 20v-6h-6M4 20l16-16" /></svg>`;
                } else if (stage === "Fired") {
                  icon = `<svg class="w-[1em] h-[1em] align-middle" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2m0 0a7 7 0 00-7 7c0 3.866 3.134 7 7 7s7-3.134 7-7a7 7 0 00-7-7zm0 0V3" /></svg>`;
                }
              %>
              <span class="flex items-center gap-1">
                <%- icon %>
                <span><%= stage %></span>
              </span>
            </a>
          <% }) %>
        </div>

    <!-- Filtered Submissions Table -->
    <div class="p-4">
      <h2 class="text-xl font-semibold mb-4">Filtered Submissions</h2>
      <div class="overflow-x-auto rounded shadow border border-gray-200 max-h-[70vh] overflow-y-auto">
        <table class="min-w-full bg-white text-sm">
          <thead class="bg-blue-100 text-gray-800 text-left uppercase text-xs sticky top-0 z-10 shadow-sm">
            <tr>
              <% if (rows.length > 0) { %>
                <% Object.keys(rows[0]).forEach(header => { %>
                  <th class="py-2 px-4 border-b border-gray-200 bg-blue-100 sticky top-0 z-10"><%= header %></th>
                <% }) %>
              <% } else { %>
                <th class="py-2 px-4">No data</th>
              <% } %>
            </tr>
          </thead>
          <tbody>
            <% rows.forEach((row, index) => { %>
              <tr class="<%= index % 2 === 0 ? 'bg-gray-50' : 'bg-white' %> hover:bg-blue-50 transition">
                <% Object.values(row).forEach(value => { %>
                  <td class="py-2 px-4 border-b border-gray-200"><%= value %></td>
                <% }) %>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <%- include('../partials/footer') %>
  </main>
</div>
