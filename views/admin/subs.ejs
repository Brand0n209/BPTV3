<%- include('../partials/header', { title: 'Admin â€“ Subs' }) %>
<div class="layout-grid">
  <%- include('../partials/sidebar', { user, activeTab: 'subs' }) %>
  <div style="width:100%">
    <%- include('../partials/topbar', { user }) %>
    <div class="main-container">
      <div class="w-full max-w-3xl mx-auto">
        <nav class="flex border-b border-gray-200 mb-6" aria-label="Submissions Tabs">
          <% subTabs.forEach(function(tab) { %>
            <a href="/admin/subs/<%= encodeURIComponent(tab.value) %>"
              class="px-4 py-2 -mb-px text-sm font-medium transition border-b-2
                <%= filterType === tab.value
                  ? 'border-blue-600 text-blue-700 font-semibold'
                  : 'border-transparent text-gray-500 hover:text-blue-600 hover:border-blue-300' %>">
              <%= tab.label %>
            </a>
          <% }) %>
        </nav>
        <% if (submissions && submissions.length > 0) { %>
          <div class="flex flex-col h-[60vh] min-h-[400px] max-h-[70vh] bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
            <div class="overflow-x-auto flex-shrink-0">
              <table class="min-w-full w-full">
                <thead>
                  <tr>
                    <% Object.keys(submissions[0]).forEach(function(col) { %>
                      <th class="px-4 py-2 border-b text-center text-xs font-bold text-gray-800 bg-blue-50 uppercase tracking-wide"><%= col %></th>
                    <% }) %>
                  </tr>
                </thead>
                <tbody class="overflow-y-auto">
                  <% submissions.forEach(function(row, idx) { %>
                    <tr 
                      class="cursor-pointer transition<%= idx % 2 === 0 ? ' bg-white' : ' bg-gray-50' %><%= selectedRow === idx ? ' ring-2 ring-blue-400 bg-blue-100' : '' %>"
                      onclick="window.location.search = '?selected=' + <%= idx %>">
                      <% Object.values(row).forEach(function(val) { %>
                        <td class="px-4 py-2 border-b text-center text-sm text-gray-800"><%= val %></td>
                      <% }) %>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        <% } else { %>
          <div class="text-center text-gray-500 py-12">
            <svg class="mx-auto mb-2 w-10 h-10 text-blue-200" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 17v-2a4 4 0 018 0v2m-4-4a4 4 0 00-4-4V7a4 4 0 018 0v2a4 4 0 00-4 4z" /></svg>
            <p>No leads in this category yet.</p>
          </div>
        <% } %>
      </div>
    </div>
    <%- include('../partials/footer') %>
  </div>
</div>
